generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  projects  Project[] 
  tasks     Task[]    
  createdAt DateTime  @default(now())
}

model Project {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  owner       User      @relation(fields: [ownerId], references: [id])
  ownerId     Int
  tasks       Task[]
  createdAt   DateTime  @default(now())
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  project     Project    @relation(fields: [projectId], references: [id])
  projectId   Int
  assignee    User?      @relation(fields: [assigneeId], references: [id])
  assigneeId  Int?
  createdAt   DateTime   @default(now())
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}